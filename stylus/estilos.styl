@import "normalize.styl"
@import "fonts.styl"
azul_claro = #9CBDD8

body
	font-size 16px
a
	text-decoration none
	color black
nav 
	background #450AC0
	line-height 4em
	text-align center
h1
	text-align center
	line-height 2.5

#logo
	img 
		width: 125px;
		position absolute
		top 0
		left 0
.menu 
	ul
		color black
		list-style none
		li
			display inline-block
			a
				background rgba(azul_claro,.75)
				border 1px
				border-radius 5px
				margin 1em 1em
				padding 10px

.options
	text-align center
	.option
		display inline-block
		margin 10px 10px 0 10px
		text-align center
		border-top dotted 4px blue
		border-left dotted 4px blue
		border-right dotted 4px blue
		border-radius 20px 20px 0 0
		width 380px
		p.name
			border solid 3px black
			line-height 3em
			margin 0
			border-radius 10px

@media screen and (min-width 480px)
	body
		background yellow

@media screen and (min-width 768px)
	body
		background green

@media screen and (min-width 1024px)
	body
		background lightblue



